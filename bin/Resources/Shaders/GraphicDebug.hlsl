#include "ShaderBuffers.hlsl"

//--------------------------------------------------------------------------------------
struct VS_INPUT
{
	float4 pos : POSITION;
	float4 col : COLOR0;
};

struct PS_INPUT
{
	float4 pos : SV_POSITION;
	float4 col : COLOR0;
};

//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
PS_INPUT vs_main( VS_INPUT Input )
{
	PS_INPUT Output = (PS_INPUT)0;

	Output.pos = mul(Input.pos, mCameraViewProj);
	Output.col = Input.col;
	
	return(Output);
}

//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 ps_main(PS_INPUT Input) : SV_Target0
{
	return Input.col;
}

